<view class="tab-bar {{visible ? '' : 'hidden'}} {{isDarkMode ? 'dark-mode' : ''}}" data-theme="{{colorTheme}}" style="position: fixed; bottom: 0; left: 0; right: 0; height: 110rpx; padding-bottom: env(safe-area-inset-bottom); z-index: 999; box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 0.2); {{isDarkMode ? 'background-color: #171717 !important;' : 'background-color: white;'}}">
		<view class="tab-bar-border" style="position: absolute; left: 0; top: 0; width: 100%; height: 1rpx; transform: scaleY(0.5); {{isDarkMode ? 'background-color: rgba(255, 255, 255, 0.05) !important;' : 'background-color: rgba(0, 0, 0, 0.05);'}}" />
		<view wx:for="{{list}}" wx:key="index" class="tab-bar-item {{selected === index ? 'active' : ''}}" style="flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; position: relative; {{selected === index ? 'transform: translateY(-6rpx);' : ''}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
				<view class="icon-wrapper" style="position: relative; display: flex; justify-content: center; align-items: center;">
						<image class="icon" src="{{selected === index ? item.selectedIconPath : item.iconPath}}" style="width: 56rpx; height: 56rpx;" />
						<view class="tab-bar-item-circle {{selected === index ? 'active' : ''}}" style="position: absolute; {{selected === index ? 'width: 80rpx; height: 80rpx;' : 'width: 0; height: 0;'}} border-radius: 50%; z-index: -1; {{isDarkMode ? 'background-color: rgba(60, 60, 60, 0.3) !important;' : selected === index ? 'background-color: rgba(26, 173, 25, 0.1);' : ''}}" />
				</view>
				<view class="tab-bar-item-text" style="font-size: {{selected === index ? '28rpx' : '26rpx'}}; margin-top: 8rpx; font-weight: {{selected === index ? '500' : '400'}}; {{selected === index ? (isDarkMode ? 'color: rgb(200, 200, 200) !important; text-shadow: 0 0 2rpx rgba(0, 0, 0, 0.3);' : 'color:' + selectedColor + '; text-shadow: 0 0 2rpx rgba(26, 173, 25, 0.2);') : (isDarkMode ? 'color: rgb(130, 130, 130) !important;' : 'color: #8a8a8a;')}}">
						{{item.text}}
				</view>
		</view>
</view>