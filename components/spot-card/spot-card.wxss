/* components/spot-card/spot-card.wxss */
.spot-card {
  display: flex;
  flex-direction: column;
  position: relative;
  margin: 20rpx;
  width: calc(100% - 40rpx);
  border-radius: 12rpx;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.spot-image {
  width: 100%;
  height: 360rpx;
  object-fit: cover;
}

.rating-badge {
  position: absolute;
  top: 320rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.spot-info {
  padding: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.spot-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 5rpx;
}

.spot-rating {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.rating-star {
  color: #ffcc00;
  font-size: 32rpx;
  margin-right: 5rpx;
}

.rating-value {
  color: #ffcc00;
  font-size: 28rpx;
  font-weight: bold;
}

.spot-location {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 5rpx;
}

.location-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
  color: #ff6b6b;
}

.spot-category {
  margin: 5rpx 0;
}

.category-tag {
  display: inline-block;
  background-color: rgba(46, 213, 115, 0.15);
  color: #2ed573;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.spot-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-top: 5rpx;
}

.free-price {
  color: #2ed573;
}

/* 深色模式样式 */
.spot-card.dark-mode {
  background-color: #222222;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.spot-info.dark-mode {
  background-color: #222222;
}

.spot-title.dark-mode {
  color: #e0e0e0;
}

.spot-location.dark-mode {
  color: #aaaaaa;
}

.location-icon.dark-mode {
  color: #ff9f9f;
}

.category-tag.dark-mode {
  background-color: rgba(46, 213, 115, 0.2);
  color: #5cf396;
}

/* 响应式布局 - 小屏幕适配 */
@media screen and (max-width: 375px) {
  .spot-image {
    height: 320rpx;
  }

  .rating-badge {
    top: 280rpx;
  }

  .spot-title {
    font-size: 32rpx;
  }

  .spot-info {
    padding: 16rpx;
    gap: 8rpx;
  }
}

/* 引入黑暗模式样式 */
@import "./spot-card-wxa-auto-dark.wxss";