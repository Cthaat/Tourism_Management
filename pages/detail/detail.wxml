<!-- pages/detail/detail.wxml -->
<view class="container {{isDarkMode ? 'dark-mode' : ''}}" data-theme="{{colorTheme}}">
		<block wx:if="{{spot}}">
				<!-- 顶部图片展示区 -->
				<view class="image-gallery">
						<!-- 添加返回按钮 -->
						<view class="back-button" bindtap="goBack">
								<text class="back-icon">←</text>
						</view>
						<swiper class="gallery-swiper" indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true">
								<swiper-item>
										<image class="gallery-image" src="{{spot.image}}" mode="aspectFill" />
								</swiper-item>
								<!-- 如果有更多图片可以在这里添加更多 swiper-item -->
						</swiper>
						<view class="gallery-overlay">
								<view class="gallery-button">
										<text class="gallery-button-text">所有图像</text>
								</view>
						</view>
				</view>
				<!-- 景点主要信息 -->
				<view class="spot-main-info {{isDarkMode ? 'dark-mode' : ''}}">
						<view class="spot-title-section">
								<view class="spot-name">{{spot.name}}</view>
								<view class="rating-section">
										<view class="rating-icon">⭐</view>
										<view class="rating-value">{{spot.rating}}/5</view>
										<view class="rating-count">({{spot.reviewCount || '1.4万'}})</view>
								</view>
								<view class="spot-category">{{spot.location}} 中的 {{spot.category}}</view>
						</view>
						<!-- 操作按钮 -->
						<view class="action-panel">
								<button class="main-action-btn" bindtap="getDirections">
										<view class="btn-inner">
												<text class="action-icon">🗺️</text>
												<text class="action-text">路线</text>
										</view>
								</button>
								<view class="action-buttons">
										<button class="action-item" bindtap="openWikipedia">
												<text class="action-text">Wikipedia</text>
										</button>
										<button class="action-item ticket-btn" bindtap="buyTicket">
												<text class="action-text">票</text>
										</button>
								</view>
						</view>
						<!-- 位置信息 -->
						<view class="info-section">
								<view class="info-row" bindtap="copyAddress">
										<text class="info-icon">📍</text>
										<text class="info-text">{{spot.address || (spot.location + '景区')}}</text>
								</view>
								<view class="info-row" bindtap="callPhone">
										<text class="info-icon">📞</text>
										<text class="info-text">{{spot.phone || '400 123 4567'}}</text>
								</view>
								<view class="info-row">
										<text class="info-icon">🕒</text>
										<text class="info-text">营业 · 关闭时间: {{spot.hours || '16:30'}}</text>
										<text class="hours-expand">▼</text>
								</view>
								<view class="info-row">
										<text class="info-icon">✏️</text>
										<text class="info-text">建议编辑 · 你的企业？</text>
								</view>
								<view class="add-info-section">
										<text class="add-info-text">添加更多信息</text>
								</view>
								<view class="info-row">
										<text class="info-icon">🌐</text>
										<text class="info-text">添加网站</text>
								</view>
								<view class="info-row">
										<text class="info-icon">🖼️</text>
										<text class="info-text">添加照片</text>
								</view>
						</view>
						<!-- 维护信息 -->
						<view class="maintenance-info">
								<text class="maintenance-text">网站维护：{{spot.name}}数字与信息部</text>
								<text class="check-more">查看更多内容</text>
						</view>
				</view>
		</block>
		<!-- 底部操作区 -->
		<view class="bottom-actions {{isDarkMode ? 'dark-mode' : ''}}">
				<button class="action-btn btn-favorite {{isFavorite ? 'active' : ''}} {{isDarkMode ? 'dark-mode' : ''}}" bindtap="toggleFavorite">
						<text class="btn-icon {{isDarkMode ? 'dark-mode' : ''}}">{{isFavorite ? '❤️' : '♡'}}</text>
						<text>{{isFavorite ? '已收藏' : '收藏'}}</text>
				</button>
				<button class="action-btn btn-primary {{isDarkMode ? 'dark-mode' : ''}}" bindtap="makeReservation">
						<text class="btn-icon {{isDarkMode ? 'dark-mode' : ''}}">🎫</text>
						<text>立即预订</text>
				</button>
		</view>
</view>