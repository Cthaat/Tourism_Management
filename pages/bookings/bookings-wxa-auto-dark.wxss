.theme-blue.dark-mode,
.theme-red.dark-mode,
.dark-mode .theme-green,
.dark-mode .theme-blue,
.dark-mode .theme-red {
  --theme-color: rgb(150, 150, 150) !important;
  --theme-light-color: rgb(120, 120, 120) !important;
  --theme-light-bg: rgb(40, 40, 40) !important;
