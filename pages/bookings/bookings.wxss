/* pages/bookings/bookings.wxss */
page {
  --theme-color: #1aad19;
  --theme-light-color: #39d038;
  --theme-light-bg: #e8f6e8;
  --theme-color-rgb: 26, 173, 25;
  --theme-dark-color: rgb(0, 122, 0);
  --theme-dark-light-color: rgb(0, 144, 0);
}

/* Theme color variables - Sky Blue */
page[data-theme="theme-blue"] {
  --theme-color: #1296db;
  --theme-light-color: #45b6ed;
  --theme-light-bg: #e8f5fa;
  --theme-color-rgb: 18, 150, 219;
  --theme-dark-color: rgb(11, 109, 161);
  --theme-dark-light-color: rgb(13, 129, 189);
}

/* Theme color variables - China Red */
page[data-theme="theme-red"] {
  --theme-color: #e54d42;
  --theme-light-color: #f37c73;
  --theme-light-bg: #faeae9;
  --theme-color-rgb: 229, 77, 66;
  --theme-dark-color: rgb(183, 61, 53);
  --theme-dark-light-color: rgb(200, 67, 58);
}

/* Theme color variables - Default Green */
page[data-theme="theme-green"] {
  --theme-color: #1aad19;
  --theme-light-color: #39d038;
  --theme-light-bg: #e8f6e8;
  --theme-color-rgb: 26, 173, 25;
  --theme-dark-color: rgb(0, 122, 0);
  --theme-dark-light-color: rgb(0, 144, 0);
}

/* 使用 themeClass 来设置主题色变量 */
.theme-green {
  --theme-color: #1aad19;
  --theme-light-color: #39d038;
  --theme-light-bg: #e8f6e8;
  --theme-color-rgb: 26, 173, 25;
  --theme-dark-color: rgb(0, 122, 0);
  --theme-dark-light-color: rgb(0, 144, 0);
}

.theme-blue {
  --theme-color: #1296db;
  --theme-light-color: #45b6ed;
  --theme-light-bg: #e8f5fa;
  --theme-color-rgb: 18, 150, 219;
  --theme-dark-color: rgb(11, 109, 161);
  --theme-dark-light-color: rgb(13, 129, 189);
}

.theme-red {
  --theme-color: #e54d42;
  --theme-light-color: #f37c73;
  --theme-light-bg: #faeae9;
  --theme-color-rgb: 229, 77, 66;
  --theme-dark-color: rgb(183, 61, 53);
  --theme-dark-light-color: rgb(200, 67, 58);
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.page-header {
  background: linear-gradient(135deg, var(--theme-color, #1aad19), var(--theme-light-color, #39d038));
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.page-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.count-badge {
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
}

.bookings-list {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.booking-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  width: 100%;
  position: relative;
}

.booking-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.booking-id {
  font-size: 24rpx;
  color: #999;
}

.booking-status {
  font-size: 24rpx;
  color: var(--theme-color, #1aad19);
  background-color: var(--theme-light-bg, #e8f6e8);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.booking-status.used {
  color: #999;
  background-color: #f0f0f0;
}

.booking-content {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.booking-spot {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.booking-info {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.booking-date {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.info-icon {
  margin-right: 8rpx;
}

.booking-price {
  font-size: 28rpx;
  color: #f5594e;
  font-weight: bold;
}

.booking-actions {
  display: flex;
  padding: 20rpx;
  justify-content: flex-end;
  gap: 16rpx;
  background-color: #fff;
}

.action-btn {
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--theme-color, #1aad19), var(--theme-light-color, #39d038));
  color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(var(--theme-color-rgb, 26, 173, 25), 0.2);
}

.action-btn.secondary {
  background-color: #f0f0f0;
  color: #666;
}

.empty-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 50rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.empty-tips {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

button.action-btn {
  background: linear-gradient(135deg, var(--theme-color, #1aad19), var(--theme-light-color, #39d038));
  color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(var(--theme-color-rgb, 26, 173, 25), 0.2);
}

/* Responsive layout - small screen adaptation */
@media screen and (max-width: 375px) {
  .page-header {
    padding: 25rpx;
  }

  .page-title {
    font-size: 32rpx;
  }

  .count-badge {
    font-size: 22rpx;
  }

  .booking-spot {
    font-size: 28rpx;
  }

  .booking-date,
  .booking-price {
    font-size: 24rpx;
  }

  .action-btn {
    font-size: 24rpx;
    padding: 6rpx 20rpx;
  }
}

/* Dark mode adjustments */
.dark-mode .page-header {
  background: linear-gradient(135deg, var(--theme-dark-color, rgb(0, 122, 0)), var(--theme-dark-light-color, rgb(0, 144, 0)));
}

.dark-mode .booking-status {
  background-color: rgba(var(--theme-color-rgb, 26, 173, 25), 0.2);
  color: var(--theme-color, #1aad19);
}

.dark-mode .action-btn.primary,
.dark-mode button.action-btn {
  background: linear-gradient(135deg, var(--theme-dark-color, rgb(0, 122, 0)), var(--theme-dark-light-color, rgb(0, 144, 0)));
}

/* Import dark mode styles */
@import "./bookings-wxa-auto-dark.wxss";