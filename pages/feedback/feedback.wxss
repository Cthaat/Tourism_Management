/* pages/feedback/feedback.wxss */
.feedback-container {
  padding: 30rpx 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.feedback-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #1aad19;
  padding-left: 16rpx;
}

.type-group {
  display: flex;
  flex-wrap: wrap;
}

.type-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 16rpx;
  padding: 10rpx 0;
}

.type-name {
  font-size: 28rpx;
  color: #333;
  margin-left: 8rpx;
}

.textarea-container {
  position: relative;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
}

.feedback-textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.contact-input {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.feedback-tips {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.submit-button {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #1aad19, #39d038);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.2);
  margin-top: 30rpx;
}

.submit-button[disabled] {
  opacity: 0.6;
  background: linear-gradient(135deg, #aaa, #bbb);
}

/* 引入黑暗模式样式 */
@import "./feedback-wxa-auto-dark.wxss";