/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f6f6f6;
  width: 100%;
  position: relative;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  position: relative;
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 搜索框样式 */
.search-container {
  width: 100%;
  padding: 10rpx 0;
  background-color: var(--theme-bg-color, #4CAF50);
  /* 使用变量定义主题背景色 */
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  align-items: center;
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  border-radius: 35rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 0 20rpx;
  width: calc(100% - 40rpx);
  position: relative;
}

/* 轮播图样式 */
.banner-container {
  height: 350rpx;
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  background-color: rgba(0, 0, 0, 0.3);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 分类导航样式 */
.category-container {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: #fff;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  margin: 0 16rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #e8f6e8;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.category-item:active .category-icon {
  transform: scale(0.9);
  background-color: #d5efd5;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

/* 标题样式 */
.section-title {
  font-size: 34rpx;
  font-weight: bold;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.section-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background-color: var(--theme-color, #1aad19);
  /* 使用变量定义主题色 */
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 热门景点样式 */
.hot-spots {
  padding: 0 16rpx 16rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.hot-spot-card {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.hot-spot-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 景点列表样式 */
.spots-container {
  padding: 0 16rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.spot-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  position: relative;
  width: 100%;
}

.spot-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.spot-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.spot-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.spot-info {
  padding: 16rpx;
}

.spot-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.spot-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.spot-price {
  color: #f5594e;
  font-weight: bold;
  font-size: 26rpx;
}

.spot-rating {
  color: #ff9500;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

/* 安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  padding-bottom: 30rpx;
  width: 100%;
  position: relative;
}

/* 响应式布局 - 小屏幕适配 */
@media screen and (max-width: 375px) {
  .category-container {
    padding: 25rpx 15rpx;
  }

  .category-icon {
    width: 70rpx;
    height: 70rpx;
    font-size: 32rpx;
  }

  .category-name {
    font-size: 22rpx;
  }

  .section-title {
    font-size: 30rpx;
    padding: 18rpx;
  }

  .spot-title {
    font-size: 26rpx;
  }

  .spot-price {
    font-size: 24rpx;
  }

  .banner-container {
    height: 320rpx;
  }
}

/* 主题色变量 - 天空蓝 */
page[data-theme="天空蓝"] {
  --theme-color: #1296db;
  --theme-bg-color: #1296db;
}

/* 主题色变量 - 中国红 */
page[data-theme="中国红"] {
  --theme-color: #e54d42;
  --theme-bg-color: #e54d42;
}

/* 主题色变量 - 默认绿 */
page[data-theme="默认绿"] {
  --theme-color: #1aad19;
  --theme-bg-color: #4CAF50;
}

/* 引入黑暗模式样式 */
@import "./index-wxa-auto-dark.wxss";