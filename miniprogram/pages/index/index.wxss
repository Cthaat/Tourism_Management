/* 引入黑暗模式样式 */
@import "./index-wxa-auto-dark.wxss";

/* ==================== 加载状态和空状态样式 ==================== */
/* 加载状态容器 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.loading-container.dark-mode {
  background-color: #2a2a2a;
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.1);
}

.loading-text {
  color: #666666;
  font-size: 28rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.loading-container.dark-mode .loading-text {
  color: #cccccc;
}

/* 空状态容器 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.empty-container.dark-mode {
  background-color: #2a2a2a;
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.1);
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.empty-container.dark-mode .empty-text {
  color: #aaaaaa;
}

.empty-action {
  color: var(--theme-color, #1aad19);
  font-size: 26rpx;
  padding: 20rpx 40rpx;
  border: 2rpx solid var(--theme-color, #1aad19);
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.empty-action:active {
  background-color: var(--theme-color, #1aad19);
  color: #ffffff;
  transform: scale(0.95);
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}