/* ==================== 页面基础布局 ==================== */
/* 页面基础样式 - 全局容器 */
page {
  height: 100vh;
  /* 高度占满视口 */
  display: flex;
  /* 弹性布局 */
  flex-direction: column;
  /* 纵向排列 */
  background-color: #f6f6f6;
  /* 浅灰背景色 */
  width: 100%;
  /* 宽度占满 */
  position: relative;
  /* 相对定位，为内部元素提供定位参考 */
}

/* 滚动区域样式 - 内容可滚动区域 */
.scrollarea {
  flex: 1;
  /* 占据剩余空间 */
  overflow-y: hidden;
  /* 隐藏纵向溢出 */
  position: relative;
  /* 相对定位 */
  width: 100%;
  /* 宽度占满 */
}

/* ==================== 用户信息区域 ==================== */
/* 用户信息区样式 - 用户头像和昵称展示 */
.userinfo {
  display: flex;
  /* 弹性布局 */
  flex-direction: column;
  /* 纵向排列 */
  align-items: center;
  /* 水平居中 */
  color: #aaa;
  /* 文字颜色：灰色 */
  width: 80%;
  /* 宽度80% */
}

/* 用户头像样式 - 圆形头像容器 */
.userinfo-avatar {
  overflow: hidden;
  /* 隐藏溢出内容 */
  width: 128rpx;
  /* 头像宽度 */
  height: 128rpx;
  /* 头像高度 */
  margin: 20rpx;
  /* 外边距 */
  border-radius: 50%;
  /* 圆角50%，形成圆形 */
}

/* 用户欢迎语样式 - 个人主页欢迎文本 */
.usermotto {
  margin-top: 200px;
  /* 顶部外边距，与上方内容保持距离 */
}

/* 头像包装器样式 - 用于选择或更新头像的按钮容器 */
.avatar-wrapper {
  padding: 0;
  /* 无内边距 */
  width: 56px !important;
  /* 固定宽度，优先级高 */
  border-radius: 8px;
  /* 圆角边框 */
  margin-top: 40px;
  /* 顶部外边距 */
  margin-bottom: 40px;
  /* 底部外边距 */
}

/* 头像图片样式 - 用户头像图片 */
.avatar {
  display: block;
  /* 块级显示 */
  width: 56px;
  /* 头像宽度 */
  height: 56px;
  /* 头像高度，保持正方形 */
}

/* 昵称输入区包装器 - 包含标签和输入框的容器 */
.nickname-wrapper {
  display: flex;
  /* 弹性布局 */
  width: 100%;
  /* 宽度占满 */
  padding: 16px;
  /* 内边距 */
  box-sizing: border-box;
  /* 盒模型计算方式 */
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  /* 顶部细边框 */
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  /* 底部细边框 */
  color: black;
  /* 文字颜色：黑色 */
}

/* 昵称标签样式 - "昵称"文字标签 */
.nickname-label {
  width: 105px;
  /* 固定宽度，保持标签对齐 */
}

/* 昵称输入框样式 - 用户输入昵称的文本框 */
.nickname-input {
  flex: 1;
  /* 占据剩余空间 */
}

/* 搜索框样式 */
.search-container {
  width: 100%;
  /* 宽度占满 */
  padding: 10rpx 0;
  /* 上下内边距，左右无内边距 */
  background-color: var(--theme-bg-color, #4CAF50);
  /* 使用变量定义主题背景色 */
  position: sticky;
  /* 粘性定位，滚动时固定在顶部 */
  top: 0;
  /* 距顶部距离 */
  z-index: 100;
  /* 层叠顺序，确保显示在其他内容上方 */
  display: flex;
  /* 弹性布局 */
  box-sizing: border-box;
  /* 盒模型计算方式 */
}

/* 搜索框内部样式 - 实际输入框容器 */
.search-box {
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中对齐 */
  width: 100%;
  /* 宽度占满 */
  height: 70rpx;
  /* 搜索框高度 */
  background-color: #fff;
  /* 白色背景 */
  border-radius: 35rpx;
  /* 圆角效果，值为高度的一半形成胶囊形状 */
  padding: 0 20rpx;
  /* 左右内边距 */
  box-sizing: border-box;
  /* 盒模型计算方式 */
  margin: 0 20rpx;
  /* 左右外边距 */
  width: calc(100% - 40rpx);
  /* 计算宽度，考虑外边距 */
  position: relative;
  /* 相对定位 */
}

/* 轮播图样式 */
.banner-container {
  height: 350rpx;
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  background-color: rgba(0, 0, 0, 0.3);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 分类导航样式 */
.category-container {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: #fff;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  margin: 0 16rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #e8f6e8;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.category-item:active .category-icon {
  transform: scale(0.9);
  background-color: #d5efd5;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

/* 标题样式 */
.section-title {
  font-size: 34rpx;
  font-weight: bold;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.section-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background-color: var(--theme-color, #1aad19);
  /* 使用变量定义主题色 */
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 热门景点样式 */
.hot-spots {
  padding: 0 16rpx 16rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.hot-spot-card {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.hot-spot-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 景点列表样式 */
.spots-container {
  padding: 0 16rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.spot-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  position: relative;
  width: 100%;
}

.spot-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.spot-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.spot-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.spot-info {
  padding: 16rpx;
}

.spot-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.spot-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.spot-price {
  color: #f5594e;
  font-weight: bold;
  font-size: 26rpx;
}

.spot-rating {
  color: #ff9500;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

/* 安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  padding-bottom: 30rpx;
  width: 100%;
  position: relative;
}



/* ==================== 主题色变量定义 ==================== */
/* ==================== 主题色变量定义 ==================== */
/* 主题色变量 - 天空蓝 */
page[data-theme="天空蓝"] {
  --theme-color: #1296db;
  /* 主题基础色：天空蓝 */
  --theme-bg-color: #1296db;
  /* 主题背景色：天空蓝 */
}

/* 主题色变量 - 中国红 */
page[data-theme="中国红"] {
  --theme-color: #e54d42;
  /* 主题基础色：中国红 */
  --theme-bg-color: #e54d42;
  /* 主题背景色：中国红 */
}

/* 主题色变量 - 默认绿 */
page[data-theme="默认绿"] {
  --theme-color: #1aad19;
  /* 主题基础色：微信绿 */
  --theme-bg-color: #4CAF50;
  /* 主题背景色：浅绿色 */
}

