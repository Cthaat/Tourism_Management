/* ==================== 页面基础布局 ==================== */
/* 页面基础样式 - 全局容器 */
page {
  height: 100vh;
  /* 高度占满视口 */
  display: flex;
  /* 弹性布局 */
  flex-direction: column;
  /* 纵向排列 */
  background-color: #f6f6f6;
  /* 浅灰背景色 */
  width: 100%;
  /* 宽度占满 */
  position: relative;
  /* 相对定位，为内部元素提供定位参考 */
  padding-top: env(safe-area-inset-top);
  /* 适配刘海屏等 */
  box-sizing: border-box;
  /* 确保内边距不增加页面总高度 */
}

/* 主容器样式 */
.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
  /* 防止内容溢出 */
}

/* 主内容区域样式 - 包含所有可滚动内容 */
.main-content {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  /* 使用最小高度而不是固定高度 */
  z-index: 4;
  /* 在轮播图之上，确保内容可见 */
  display: flex;
  flex-direction: column;
  /* 设置为纵向弹性布局 */
  pointer-events: none;
  /* 主内容区域禁用触摸事件，让事件穿透到轮播图 */
}

/* 滚动区域样式 - 内容可滚动区域 */
.scrollarea {
  flex: 1;
  /* 占据剩余空间 */
  overflow-y: scroll !important;
  /* 确保滚动可用，提高优先级 */
  position: relative;
  /* 相对定位 */
  width: 100%;
  /* 宽度占满 */
  padding-top: 30rpx;
  /* 顶部内边距 */
  margin-top: 50vh;
  /* 稍微向上移动，形成5vh的重叠区域，提供更好的视觉层次 */
  background-color: rgba(255, 255, 255, 0.85);
  /* 适当降低不透明度，让轮播图在重叠区域微微可见 */
  border-top-left-radius: 40rpx;
  /* 增大顶部圆角 */
  border-top-right-radius: 40rpx;
  /* 增大顶部圆角 */
  backdrop-filter: blur(10px);
  /* 减少背景模糊，避免完全遮挡轮播图 */
  box-shadow: 0 -8rpx 20rpx rgba(0, 0, 0, 0.15);
  /* 增强阴影效果 */  z-index: 4;
  /* 保持在轮播图之上，但不遮挡搜索框 */
  height: calc(100vh - 50vh);
  /* 高度设置为视口高度减去顶部margin */
  -webkit-overflow-scrolling: touch;
  /* 增强iOS滚动体验 */  pointer-events: auto;
  /* 启用滚动区域的触摸事件，确保滚动功能正常 */
}

/* 滚动区域顶部透明触摸区域 - 让轮播图在重叠区域可以交互 */
.scrollarea::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5vh; /* 对应5vh的重叠区域 */
  pointer-events: none; /* 透明于触摸事件 */
  z-index: 10; /* 在滚动内容之上 */
}

/* 为滚动区域内的可交互元素重新启用触摸事件 */
.scrollarea>.category-container,
.scrollarea>.section-title,
.scrollarea>.spots-container,
.scrollarea>.empty-container {
  pointer-events: auto;
  /* 为滚动区域的直接子元素启用触摸事件 */
}

.scrollarea .category-container,
.scrollarea .category-item,
.scrollarea .spot-card,
.scrollarea .section-title,
.scrollarea .hot-spots-grid,
.scrollarea .spot-item {
  pointer-events: auto;
  /* 确保分类导航、景点卡片等可以正常交互 */
}

/* 特别确保按钮和链接可以点击 */
.scrollarea button,
.scrollarea .category-item,
.scrollarea .spot-card,
.scrollarea [bindtap] {
  pointer-events: auto !important;
}

/* ==================== 用户信息区域 ==================== */
/* 用户信息区样式 - 用户头像和昵称展示 */
.userinfo {
  display: flex;
  /* 弹性布局 */
  flex-direction: column;
  /* 纵向排列 */
  align-items: center;
  /* 水平居中 */
  color: #aaa;
  /* 文字颜色：灰色 */
  width: 80%;
  /* 宽度80% */
}

/* 用户头像样式 - 圆形头像容器 */
.userinfo-avatar {
  overflow: hidden;
  /* 隐藏溢出内容 */
  width: 128rpx;
  /* 头像宽度 */
  height: 128rpx;
  /* 头像高度 */
  margin: 20rpx;
  /* 外边距 */
  border-radius: 50%;
  /* 圆角50%，形成圆形 */
}

/* 用户欢迎语样式 - 个人主页欢迎文本 */
.usermotto {
  margin-top: 200px;
  /* 顶部外边距，与上方内容保持距离 */
}

/* 头像包装器样式 - 用于选择或更新头像的按钮容器 */
.avatar-wrapper {
  padding: 0;
  /* 无内边距 */
  width: 56px !important;
  /* 固定宽度，优先级高 */
  border-radius: 8px;
  /* 圆角边框 */
  margin-top: 40px;
  /* 顶部外边距 */
  margin-bottom: 40px;
  /* 底部外边距 */
}

/* 头像图片样式 - 用户头像图片 */
.avatar {
  display: block;
  /* 块级显示 */
  width: 56px;
  /* 头像宽度 */
  height: 56px;
  /* 头像高度，保持正方形 */
}

/* 昵称输入区包装器 - 包含标签和输入框的容器 */
.nickname-wrapper {
  display: flex;
  /* 弹性布局 */
  width: 100%;
  /* 宽度占满 */
  padding: 16px;
  /* 内边距 */
  box-sizing: border-box;
  /* 盒模型计算方式 */
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  /* 顶部细边框 */
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  /* 底部细边框 */
  color: black;
  /* 文字颜色：黑色 */
}

/* 昵称标签样式 - "昵称"文字标签 */
.nickname-label {
  width: 105px;
  /* 固定宽度，保持标签对齐 */
}

/* 昵称输入框样式 - 用户输入昵称的文本框 */
.nickname-input {
  flex: 1;
  /* 占据剩余空间 */
}

/* 搜索框样式 - 透明导航栏风格 */
.search-container {
  width: 70%;
  /* 宽度为70%，方便操作 */
  padding: 20rpx 0;
  /* 上下内边距 */
  background-color: transparent;
  /* 透明背景 */
  position: fixed;
  /* 固定定位，不随滚动而移动 */
  top: calc(env(safe-area-inset-top) + 20rpx);
  /* 从安全区域顶部开始计算，适配刘海屏 */
  left: 30rpx;
  /* 靠左显示 */
  z-index: 20;
  /* 确保搜索框在轮播图和所有元素之上 */
  display: flex;
  /* 弹性布局 */
  box-sizing: border-box;
  /* 盒模型计算方式 */
  justify-content: flex-start;
  /* 左对齐 */
  margin-top: 55rpx;
  pointer-events: auto;
  /* 重新启用搜索框的触摸事件 */
}

/* 搜索框内部样式 - 实际输入框容器 */
.search-box {
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中对齐 */
  width: 100%;
  /* 宽度占满 */
  height: 70rpx;
  /* 搜索框高度 */
  background-color: rgba(255, 255, 255, 0.7);
  /* 半透明白色背景 */
  backdrop-filter: blur(10px);
  /* 背景模糊效果 */
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  /* 淡白色边框 */
  border-radius: 35rpx;
  /* 圆角效果，值为高度的一半形成胶囊形状 */
  padding: 0 20rpx;
  /* 左右内边距 */
  box-sizing: border-box;
  /* 盒模型计算方式 */
  margin: 0;
  /* 移除外边距 */
  width: 100%;
  /* 使用100%宽度 */
  position: relative;
  /* 相对定位 */
  border: none;
  /* 移除边框 - 消除透明矩形效果 */
  box-shadow: none;
  /* 移除阴影 - 消除透明矩形效果 */
  transition: all 0.3s ease;
  /* 添加过渡效果 */
}

/* 搜索图标样式 */
.search-icon {
  color: #ffffff;
  /* 白色图标 - 在半透明背景上更醒目 */
  font-size: 32rpx;
  /* 增大图标大小使其更加醒目 */
  margin-right: 12rpx;
  /* 右侧外边距 */
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.4);
  /* 增强阴影效果以提高可见性 */
}

/* 搜索输入框样式 */
.search-input {
  color: #ffffff;
  /* 白色文本 */
  font-size: 28rpx;
  /* 文字大小 */
  flex: 1;
  /* 占据剩余空间 */
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  /* 添加文字阴影增强可读性 */
}

/* 搜索框占位符样式 */
.search-input::placeholder {
  color: rgba(255, 255, 255, 0.9);
  /* 增加不透明度，使占位符更加醒目 */
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  /* 添加文字阴影增强可读性 */
}

/* 全屏背景轮播图样式 */
.fullscreen-banner {
  position: fixed;
  /* 固定定位 */
  top: 0;
  /* 距顶部0 */
  left: 0;
  /* 距左侧0 */
  width: 100%;
  /* 宽度100% */  height: 55vh;
  /* 轮播图高度设置为视口高度的55% */
  z-index: 2;
  /* 保持低层级，不遮挡任何UI元素 */
  overflow: hidden;
  /* 隐藏溢出部分 */
  pointer-events: none;
  /* 禁用容器的触摸事件，只让swiper接收 */
}

/* 轮播图样式 */
.banner-container {
  height: 100%;
  /* 填满父容器高度 */
  position: relative;
  width: 100%;
  /* 宽度100% */
  touch-action: pan-x;
  /* 允许水平滑动 */
  -webkit-touch-callout: none;
  /* 禁用长按菜单，避免干扰滑动 */
  z-index: 3;
  /* 轮播图容器层级，在背景之上但不遮挡UI元素 */
  pointer-events: auto !important;
  /* 强制启用触摸事件 */
}

/* 自定义轮播指示点样式 */
.banner-container .wx-swiper-dots {
  margin-bottom: 120rpx;
  /* 提高指示点位置，避免被内容区遮挡 */
  margin-right: auto;
  margin-left: 50%;
  transform: translateX(-50%);
  /* 居中显示指示点 */
}

.banner-container .wx-swiper-dot {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  /* 更明显的白色指示点 */
  border-radius: 8rpx;
  margin: 0 8rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  /* 确保图片填满容器 */
  touch-action: manipulation;
  /* 允许触摸操作 */
  pointer-events: auto;
  /* 确保可以接收触摸事件 */
  box-sizing: border-box;
}

/* 轮播图整体容器 - 确保接收触摸事件 */
.fullscreen-banner swiper {
  pointer-events: auto !important;
  /* 强制启用swiper的触摸事件 */
  box-sizing: border-box;
}

.fullscreen-banner swiper-item {
  pointer-events: auto !important;
  /* 强制启用swiper-item的触摸事件 */
  position: relative;
}

/* 顶部渐变遮罩 - 增强顶部区域文字可读性 */
.banner-top-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  /* 调整渐变高度 */
  background: linear-gradient(to bottom,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0.3) 40%,
      rgba(0, 0, 0, 0) 100%);
  z-index: 1;
  pointer-events: none;
  /* 禁用遮罩层的触摸事件，允许事件穿透到轮播图 */
  /* 确保在轮播图上方，但在搜索框下方 */
  pointer-events: none;
  /* 允许点击穿透 */
}

.banner-title {
  position: absolute;
  bottom: 140rpx;
  /* 位置上移，避免被滚动内容遮挡 */
  left: 30rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  background-color: rgba(0, 0, 0, 0.4);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  z-index: 4;
  /* 降低层级，确保不会阻挡轮播图触摸事件 */
  pointer-events: auto;
  /* 确保标题可以接收点击事件 */
}

/* 分类导航样式 */
.category-container {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  margin: 0 16rpx 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  width: calc(100% - 32rpx);
  box-sizing: border-box;
  backdrop-filter: blur(12px);
  /* 增强背景模糊效果 */
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  /* 添加更明显的边框增强浮岛效果 */
  transition: all 0.3s ease;
  /* 添加过渡效果 */
}

/* 为分类导航添加浮动效果 */
.category-container {
  animation: float 4s ease-in-out infinite;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #e8f6e8;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.category-item:active .category-icon {
  transform: scale(0.9);
  background-color: #d5efd5;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

/* 标题样式 */
.section-title {
  font-size: 34rpx;
  font-weight: bold;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  color: #333;
  /* 标题颜色加深 */
  margin-top: 10rpx;
  /* 增加顶部间距 */
}

.section-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background-color: var(--theme-color, #1aad19);
  /* 使用变量定义主题色 */
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 热门景点样式 */
.hot-spots {
  padding: 0 16rpx 16rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  grid-gap: 30rpx;
  /* 增加卡片间距 */
}

.hot-spot-card {
  margin-bottom: 0;
  /* 移除底部边距，因为已通过grid-gap控制 */
  background-color: rgba(255, 255, 255, 0.85);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
  backdrop-filter: blur(12px);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  display: flex;
  flex-direction: column;
}

/* 为热门景点卡片添加浮动效果，错开时间 */
.hot-spot-card {
  animation: float 5s ease-in-out infinite;
}

.hot-spot-card:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.1s ease;
}

/* 景点列表样式 */
.spots-container {
  padding: 0 20rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.spot-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 30rpx;
  /* 增加卡片间距 */
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 0;
  /* 添加上下内边距 */
  margin: 0 auto;
}

.spot-item {
  width: 100%;
  background-color: transparent;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
  box-sizing: border-box;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 为景点列表项添加浮动效果，进一步错开时间 */
.spot-item:nth-child(odd) {
  animation: float 6s ease-in-out infinite;
}

.spot-item:nth-child(even) {
  animation: float 7s ease-in-out infinite;
}

.spot-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.spot-image {
  width: 100%;
  height: 340rpx;
  /* 增加图片高度，使其占据卡片更多空间 */
  object-fit: cover;
  display: block;
  margin: 0;
  padding: 0;
}

.spot-info {
  padding: 10rpx 16rpx;
  /* 减小内边距 */
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  /* 控制内部元素间距 */
}

.spot-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  /* 减小底部边距 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
  /* 控制行高 */
}

.spot-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
  /* 减小顶部间距 */
}

.spot-price {
  color: #f5594e;
  font-weight: bold;
  font-size: 24rpx;
  /* 减小字体大小 */
}

.spot-rating {
  color: #ff9500;
  font-size: 22rpx;
  /* 减小字体大小 */
  display: flex;
  align-items: center;
}

/* ==================== 内联卡片样式 ==================== */
/* 内联卡片容器 - 替代spot-card组件 */
.inline-card {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.15);
  /* 增强阴影效果 */
  min-height: 440rpx;
  /* 增加最小高度以适应更大的图片 */
  transform: translateZ(0);
  /* 提高性能 */
}

/* 内联景点图片 */
.inline-image {
  width: 100%;
  height: 360rpx;
  /* 显著增加图片高度 */
  object-fit: cover;
  display: block;
  border-radius: 16rpx 16rpx 0 0;
  /* 确保图片顶部圆角 */
}

/* 内联评分徽章 */
.inline-badge {
  position: absolute;
  top: 320rpx;
  /* 调整评分位置与图片新高度匹配 */
  right: 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  z-index: 10;
  /* 确保显示在最上层 */
}

/* 内联景点信息区域 */
.inline-info {
  padding: 8rpx 12rpx;
  /* 减小内边距 */
  display: flex;
