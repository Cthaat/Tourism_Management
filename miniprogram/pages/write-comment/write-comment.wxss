/* ================================
   响应式设计优化
   ================================ */

/* 小屏幕适配 */
@media (max-width: 750rpx) {
  .form-wrapper {
    width: 90%;
  }

  .spot-info,
  .rating-section,
  .comment-section,
  .images-section,
  .submit-section {
    padding: 40rpx 30rpx;
  }

  .images-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }

  .image-item {
    height: 200rpx;
  }

  .add-image-btn {
    height: 200rpx;
  }
}

/* 大屏幕优化 */
@media (min-width: 1200rpx) {
  .form-wrapper {
    max-width: 800rpx;
  }
}