/* 页面容器 */
.container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container.dark-mode {
  background: linear-gradient(135deg, #1a1a1a 0%, #2c2c2c 100%);
}

/* 表单主容器 - 统一85%宽度，居中对齐 */
.form-wrapper {
  width: 85%;
  max-width: 650rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* ================================
   景点信息区域 - 美化样式
   ================================ */
.spot-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.spot-info::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #52c41a, #73d13d, #95de64, #52c41a);
  background-size: 200% 100%;
  animation: spotInfoGradient 3s ease-in-out infinite;
}

@keyframes spotInfoGradient {

  0%,
  100% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }
}

.container.dark-mode .spot-info {
  background: rgba(44, 44, 44, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.4),
    0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.spot-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #262626;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.container.dark-mode .spot-name {
  color: #ffffff;
}

.spot-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.container.dark-mode .spot-subtitle {
  color: #bfbfbf;
}

/* ================================
   评分区域 - 优化星级样式
   ================================ */
.rating-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.container.dark-mode .rating-section {
  background: rgba(44, 44, 44, 0.95);
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.rating-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 36rpx;
  letter-spacing: 1rpx;
}

.container.dark-mode .rating-title {
  color: #ffffff;
}

.rating-stars {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.star {
  font-size: 64rpx;
  color: #d9d9d9;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.star.filled {
  color: #ffd700;
  transform: scale(1.15);
  filter: drop-shadow(0 4rpx 8rpx rgba(255, 215, 0, 0.3));
}

.star:hover {
  transform: scale(1.25);
  filter: drop-shadow(0 4rpx 12rpx rgba(255, 215, 0, 0.4));
}

.rating-text {
  font-size: 30rpx;
  color: #fa8c16;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.container.dark-mode .rating-text {
  color: #ffa940;
}

/* ================================
   评论内容区域 - 现代化输入框
   ================================ */
.comment-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.container.dark-mode .comment-section {
  background: rgba(44, 44, 44, 0.95);
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 30rpx;
  letter-spacing: 1rpx;
}

.container.dark-mode .section-title {
  color: #ffffff;
}

.comment-textarea {
  width: 100%;
  min-height: 240rpx;
  background: #fafafa;
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  line-height: 1.7;
  color: #262626;
  box-sizing: border-box;
  resize: none;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.comment-textarea.dark-mode {
  background: #404040;
  border-color: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.comment-textarea:focus {
  border-color: #52c41a;
  background: #ffffff;
  box-shadow:
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02),
    0 0 0 4rpx rgba(82, 196, 26, 0.1);
  transform: translateY(-2rpx);
}

.container.dark-mode .comment-textarea:focus {
  border-color: #73d13d;
  background: #2c2c2c;
  box-shadow:
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1),
    0 0 0 4rpx rgba(115, 209, 61, 0.15);
}

.textarea-placeholder {
  color: #bfbfbf;
}

.container.dark-mode .textarea-placeholder {
  color: #8c8c8c;
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #8c8c8c;
  margin-top: 16rpx;
  font-weight: 500;
}

.container.dark-mode .char-count {
  color: #bfbfbf;
}

/* ================================
   图片上传区域 - 现代化网格布局
   ================================ */
.images-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.container.dark-mode .images-section {
  background: rgba(44, 44, 44, 0.95);
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.image-item {
  position: relative;
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.image-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
  transition: all 0.3s ease;
}

.image-item:hover .image {
  transform: scale(1.05);
}

.delete-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  backdrop-filter: blur(10rpx);
}

.delete-btn:hover {
  background: rgba(255, 77, 79, 0.8);
  transform: scale(1.1);
}

.delete-icon {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

.add-image-btn {
  width: 100%;
  height: 220rpx;
  border: 3rpx dashed #52c41a;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  background: rgba(82, 196, 26, 0.02);
}

.add-image-btn.dark-mode {
  border-color: #73d13d;
  background: rgba(115, 209, 61, 0.05);
}

.add-image-btn:hover {
  background: rgba(82, 196, 26, 0.08);
  border-color: #73d13d;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.15);
}

.container.dark-mode .add-image-btn:hover {
  background: rgba(115, 209, 61, 0.12);
}

.add-icon {
  font-size: 52rpx;
  color: #52c41a;
  margin-bottom: 12rpx;
  font-weight: 300;
}

.add-image-btn.dark-mode .add-icon {
  color: #73d13d;
}

.add-text {
  font-size: 26rpx;
  color: #52c41a;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.add-image-btn.dark-mode .add-text {
  color: #73d13d;
}

.images-tip {
  font-size: 26rpx;
  color: #8c8c8c;
  text-align: center;
  font-weight: 500;
}

.container.dark-mode .images-tip {
  color: #bfbfbf;
}

/* ================================
   提交区域 - 现代化按钮设计
   ================================ */
.submit-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  backdrop-filter: blur(20rpx);
}

.container.dark-mode .submit-section {
  background: rgba(44, 44, 44, 0.95);
  box-shadow:
    0 6rpx 24rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 50%, #95de64 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 40rpx;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  box-shadow:
    0 8rpx 24rpx rgba(82, 196, 26, 0.3),
    0 2rpx 8rpx rgba(82, 196, 26, 0.2);
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  position: relative;
  overflow: hidden;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.submit-btn:hover::before {
  left: 100%;
}

.submit-btn.dark-mode {
  background: linear-gradient(135deg, #389e0d 0%, #52c41a 50%, #73d13d 100%);
  box-shadow:
    0 8rpx 24rpx rgba(56, 158, 13, 0.4),
    0 2rpx 8rpx rgba(56, 158, 13, 0.3);
}

.submit-btn:hover {
  transform: translateY(-6rpx);
  box-shadow:
    0 12rpx 32rpx rgba(82, 196, 26, 0.4),
    0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.submit-btn[disabled] {
  opacity: 0.6;
  transform: none;
  box-shadow:
    0 4rpx 16rpx rgba(82, 196, 26, 0.2),
    0 2rpx 6rpx rgba(82, 196, 26, 0.1);
  cursor: not-allowed;
}

.submit-btn[disabled]:hover {
  transform: none;
}

