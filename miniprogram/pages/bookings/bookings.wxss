/* ==================== 主题变量定义 ==================== */
/* 页面主题变量 - 设置默认绿色主题 */
page {
  --theme-color: #1aad19;
  /* 主题色：绿色 */
  --theme-light-color: #39d038;
  /* 主题浅色：亮绿色，用于渐变 */
  --theme-light-bg: #e8f6e8;
  /* 主题背景：极浅绿色，用于背景 */
  --theme-color-rgb: 26, 173, 25;
  /* 主题色RGB值，用于透明度设置 */
  --theme-dark-color: rgb(0, 122, 0);
  /* 深色模式主题色：深绿色 */
  --theme-dark-light-color: rgb(0, 144, 0);
  /* 深色模式主题浅色：中绿色 */
}

/* ==================== 主题色变体 ==================== */
/* 蓝色主题变量 - 天空蓝主题 */
page[data-theme="theme-blue"] {
  --theme-color: #1296db;
  /* 主题色：蓝色 */
  --theme-light-color: #45b6ed;
  /* 主题浅色：亮蓝色 */
  --theme-light-bg: #e8f5fa;
  /* 主题背景：极浅蓝色 */
  --theme-color-rgb: 18, 150, 219;
  /* 主题色RGB值 */
  --theme-dark-color: rgb(11, 109, 161);
  /* 深色模式主题色：深蓝色 */
  --theme-dark-light-color: rgb(13, 129, 189);
  /* 深色模式主题浅色：中蓝色 */
}

/* 红色主题变量 - 中国红主题 */
page[data-theme="theme-red"] {
  --theme-color: #e54d42;
  /* 主题色：红色 */
  --theme-light-color: #f37c73;
  /* 主题浅色：亮红色 */
  --theme-light-bg: #faeae9;
  /* 主题背景：极浅红色 */
  --theme-color-rgb: 229, 77, 66;
  /* 主题色RGB值 */
  --theme-dark-color: rgb(183, 61, 53);
  /* 深色模式主题色：深红色 */
  --theme-dark-light-color: rgb(200, 67, 58);
  /* 深色模式主题浅色：中红色 */
}

/* 绿色主题变量 - 默认绿色主题（与页面默认相同，用于显式切换） */
page[data-theme="theme-green"] {
  --theme-color: #1aad19;
  /* 主题色：绿色 */
  --theme-light-color: #39d038;
  /* 主题浅色：亮绿色 */
  --theme-light-bg: #e8f6e8;
  /* 主题背景：极浅绿色 */
  --theme-color-rgb: 26, 173, 25;
  /* 主题色RGB值 */
  --theme-dark-color: rgb(0, 122, 0);
  /* 深色模式主题色：深绿色 */
  --theme-dark-light-color: rgb(0, 144, 0);
  /* 深色模式主题浅色：中绿色 */
}

/* ==================== 主题类选择器 ==================== */
/* 绿色主题类 - 用于元素级主题应用 */
.theme-green {
  --theme-color: #1aad19;
  /* 主题色：绿色 */
  --theme-light-color: #39d038;
  /* 主题浅色：亮绿色 */
  --theme-light-bg: #e8f6e8;
  /* 主题背景：极浅绿色 */
  --theme-color-rgb: 26, 173, 25;
  /* 主题色RGB值 */
  --theme-dark-color: rgb(0, 122, 0);
  /* 深色模式主题色：深绿色 */
  --theme-dark-light-color: rgb(0, 144, 0);
  /* 深色模式主题浅色：中绿色 */
}

/* 蓝色主题类 - 用于元素级主题应用 */
.theme-blue {
  --theme-color: #1296db;
  /* 主题色：蓝色 */
  --theme-light-color: #45b6ed;
  /* 主题浅色：亮蓝色 */
  --theme-light-bg: #e8f5fa;
  /* 主题背景：极浅蓝色 */
  --theme-color-rgb: 18, 150, 219;
  /* 主题色RGB值 */
  --theme-dark-color: rgb(11, 109, 161);
  /* 深色模式主题色：深蓝色 */
  --theme-dark-light-color: rgb(13, 129, 189);
  /* 深色模式主题浅色：中蓝色 */
}

/* 红色主题类 - 用于元素级主题应用 */
.theme-red {
  --theme-color: #e54d42;
  /* 主题色：红色 */
