/**
 * 文件名: add-spot.wxss
 * 描述: 添加景点页面样式文件
 * 版本: 1.0.0
 * 创建日期: 2025-05-25
 * 作者: Tourism_Management开发团队
 * 
 * 功能说明:
 * - 表单布局样式
 * - 深色模式适配
 * - 主题色支持
 * - 响应式设计
 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.container.dark-mode {
  background-color: #1a1a1a;
  color: #ffffff;
}

/* 表单容器 */
.add-spot-form {
  background-color: transparent;
}

/* 表单组 */
.form-group {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-group.dark-mode {
  background-color: #2a2a2a;
  color: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(255, 255, 255, 0.05);
}

/* 组标题 */
.group-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.group-title.dark-mode {
  color: #ffffff;
  border-bottom-color: #444444;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 标签 */
.label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.label.dark-mode {
  color: #cccccc;
}

.required {
  color: #ff4d4f;
  margin-right: 4rpx;
  font-weight: bold;
}

/* 输入框 */
.input {
  width: 100%;
  max-width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
  overflow: hidden;
}

.input.dark-mode {
  background-color: #333333;
  color: #ffffff;
  border-color: #555555;
}

.input:focus {
  border-color: var(--theme-color, #1aad19);
}

/* 文本域 */
.textarea {
  width: 100%;
  max-width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
  overflow: hidden;
}

.textarea.dark-mode {
  background-color: #333333;
  color: #ffffff;
  border-color: #555555;
}

/* 选择器 */
.picker {
  width: 100%;
  max-width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  background-color: #ffffff;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.picker.dark-mode {
  background-color: #333333;
  border-color: #555555;
}

.picker::after {
  content: '>';
  position: absolute;
  right: 24rpx;
  color: #999999;
  transform: rotate(90deg);
  font-size: 24rpx;
  flex-shrink: 0;
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 40rpx;
}

.picker-text.dark-mode {
  color: #ffffff;
}

/* 滑块 */
.slider {
  margin: 20rpx 0;
}

/* 位置容器 */
.location-container {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.location-input {
  flex: 1;
  max-width: 100%;
}

.location-btn {
  flex-shrink: 0;
  background-color: var(--theme-color, #1aad19) !important;
  color: #ffffff !important;
  border: none !important;
  font-size: 24rpx !important;
  padding: 0 20rpx !important;
  height: 60rpx !important;
  line-height: 60rpx !important;
  border-radius: 8rpx !important;
}

.location-btn.dark-mode {
  background-color: var(--theme-color, #1aad19) !important;
}

/* 地图容器 */
.map-container {
  position: relative;
  margin-top: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #e6e6e6;
}

.map-container.dark-mode {
  border-color: #444444;
}

/* 地图组件 */
.location-map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

/* 地图中心点标记 */
.map-center-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
  z-index: 999;
  pointer-events: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 地图控制按钮容器 */
.map-controls {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  z-index: 999;
}

/* 地图控制按钮 */
.map-control-btn {
  background-color: rgba(255, 255, 255, 0.9) !important;
  color: #333333 !important;
  border: none !important;
  font-size: 24rpx !important;
  padding: 0 16rpx !important;
  height: 56rpx !important;
  line-height: 56rpx !important;
  border-radius: 28rpx !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15) !important;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.map-control-btn.dark-mode {
  background-color: rgba(42, 42, 42, 0.9) !important;
  color: #ffffff !important;
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.1) !important;
}

.map-control-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 1) !important;
}

.map-control-btn.dark-mode:active {
  background-color: rgba(42, 42, 42, 1) !important;
}

/* 二级地图控制按钮样式 */
.map-control-btn.secondary {
  background-color: rgba(240, 248, 255, 0.9) !important;
  color: #1890ff !important;
  border: 1rpx solid rgba(24, 144, 255, 0.3) !important;
}

.map-control-btn.secondary.dark-mode {
  background-color: rgba(30, 60, 90, 0.9) !important;
  color: #69c0ff !important;
  border: 1rpx solid rgba(105, 192, 255, 0.3) !important;
}

.map-control-btn.secondary:active {
  background-color: rgba(240, 248, 255, 1) !important;
  transform: scale(0.95);
}

.map-control-btn.secondary.dark-mode:active {
  background-color: rgba(30, 60, 90, 1) !important;
}

/* 地址信息显示 */
.address-info {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666666;
  border-left: 4rpx solid var(--theme-color, #1aad19);
}

.address-info.dark-mode {
  background-color: #333333;
  color: #cccccc;
}

/* 地址搜索建议样式 */
.address-suggestions {
  position: relative;
  width: 100%;
  max-width: 100%;
  background-color: #ffffff;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  margin-top: 8rpx;
  max-height: 400rpx;
  overflow-y: auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  box-sizing: border-box;
}

.address-suggestions.dark-mode {
  background-color: #2a2a2a;
  border-color: #444444;
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.05);
}

.suggestion-item {
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  transition: background-color 0.2s ease;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active,
.suggestion-item:hover {
  background-color: #f8f9fa;
}

.suggestion-item.dark-mode {
  border-bottom-color: #444444;
}

.suggestion-item.dark-mode:active,
.suggestion-item.dark-mode:hover {
  background-color: #3a3a3a;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.suggestion-text.dark-mode {
  color: #ffffff;
}

.suggestion-type {
  font-size: 24rpx;
  color: #999999;
  text-transform: capitalize;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.suggestion-type.dark-mode {
  color: #aaaaaa;
}

/* 坐标信息显示 */
.coordinates {
  margin-top: 12rpx;
  padding: 12rpx 20rpx;
  background-color: #e8f6e8;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #1aad19;
  font-family: monospace;
}

.coordinates.dark-mode {
  background-color: rgba(26, 173, 25, 0.1);
  color: #4dd865;
}

/* 地图加载状态 */
.map-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  z-index: 998;
}

.map-loading.dark-mode {
  background-color: #2a2a2a;
}

.map-loading-text {
  font-size: 26rpx;
  color: #999999;
}

.map-loading-text.dark-mode {
  color: #666666;
}

/* 地图操作提示 */
.map-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background-color: #fff7e6;
  border: 1rpx solid #ffd666;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #d48806;
}

.map-tip.dark-mode {
  background-color: rgba(255, 214, 102, 0.1);
  border-color: rgba(255, 214, 102, 0.3);
  color: #ffd666;
}

/* 提交容器和按钮样式 */
.submit-container {
  margin-top: 40rpx;
  padding: 0;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--theme-color, #1aad19);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: 1;
}

.submit-btn:active {
  transform: scale(0.98);
  background-color: #179117;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #666666;
  transform: none;
}

.submit-btn.dark-mode {
  background-color: var(--theme-color, #1aad19);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.submit-btn.dark-mode[disabled] {
  background-color: #555555;
  color: #888888;
}

/* 开关样式 */
.switch {
  margin-right: 16rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666666;
  vertical-align: middle;
}

.status-text.dark-mode {
  color: #cccccc;
}

/* 底部安全区 */
.safe-bottom {
  height: 40rpx;
  width: 100%;
}

/* 全局溢出控制 - 使用类选择器替代通配符 */
.container,
.form-group,
.form-item,
.picker,
.input,
.textarea,
.location-container {
  box-sizing: border-box;
}

.container view,
.container text,
.container input,
.container textarea,
.container picker {
  max-width: 100%;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

/* 防止选择器下拉菜单溢出 */
picker-view,
picker-view-column {
  max-width: 100% !important;
  overflow: hidden !important;
}

/* 确保所有表单控件都在容器内 */
.form-group>.form-item>.picker,
.form-group>.form-item>.input,
.form-group>.form-item>.textarea,
.form-group>.form-item>.location-container {
  max-width: 100%;
  min-width: 0;
  overflow: hidden;
}

/* 选择器文本溢出处理 */
.picker-text {
  max-width: calc(100% - 40rpx);
  min-width: 0;
}

/* 响应式设计 */
@media (max-width: 320px) {
  .location-container {
    flex-direction: column;
    align-items: stretch;
  }

  .location-input {
    width: 100%;
    max-width: 100%;
  }

  .picker,
  .input,
  .textarea {
    font-size: 26rpx;
    padding: 0 20rpx;
  }

  .picker-text {
    font-size: 26rpx;
    padding-right: 36rpx;
  }

  .form-group {
    padding: 18rpx;
  }

  .map-controls {
    bottom: 12rpx;
    right: 12rpx;
  }

  .map-control-btn {
    font-size: 22rpx !important;
    height: 52rpx !important;
    line-height: 52rpx !important;
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx;
  }

  .form-group {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }

  .group-title {
    font-size: 30rpx;
  }

  .label {
    font-size: 26rpx;
  }

  .input,
  .textarea,
  .picker-text {
    font-size: 26rpx;
  }

  .picker,
  .input,
  .textarea {
    padding: 0 20rpx;
    max-width: 100%;
  }

  .picker-text {
    padding-right: 36rpx;
  }

  .address-suggestions {
    margin-left: 0;
    margin-right: 0;
    max-width: 100%;
  }

  .suggestion-item {
    padding: 20rpx 16rpx;
  }
}

/* 动画效果 */
.form-group {
  transition: all 0.3s ease;
}

.form-group:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.form-group.dark-mode:hover {
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.08);
}

.submit-btn {
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
}

/* 表单焦点状态 */
.input:focus,
.textarea:focus {
  border-color: var(--theme-color, #1aad19);
  box-shadow: 0 0 0 4rpx var(--theme-light-bg, #e8f6e8);
}

.input.dark-mode:focus,
.textarea.dark-mode:focus {
  box-shadow: 0 0 0 4rpx rgba(26, 173, 25, 0.2);
}

/* 引入深色模式样式 */
@import "./add-spot-wxa-auto-dark.wxss";

/* ==================== 图片上传相关样式 ==================== */

/* 图片上传容器 */
.image-upload-container {
  margin-top: 16rpx;
}

.image-upload-container.dark-mode {
  background-color: transparent;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.image-list.dark-mode {
  background-color: transparent;
}

/* 图片项容器 */
.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f8f8f8;
}

.image-item.dark-mode {
  background-color: #3a3a3a;
}

/* 已上传的图片 */
.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  transition: transform 0.2s ease;
}

.uploaded-image.dark-mode {
  background-color: #404040;
}

.uploaded-image:active {
  transform: scale(0.95);
}

/* 删除图片按钮 */
.delete-image-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  z-index: 10;
  transition: background-color 0.2s ease;
}

.delete-image-btn.dark-mode {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.delete-image-btn:active {
  background-color: rgba(255, 0, 0, 0.8);
}

.delete-image-btn.dark-mode:active {
  background-color: rgba(255, 0, 0, 0.8);
}

/* 删除图标 */
.delete-icon {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

/* 添加图片按钮 */
.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
  color: #999999;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.add-image-btn.dark-mode {
  border-color: #555555;
  background-color: #333333;
  color: #cccccc;
}

.add-image-btn:active {
  background-color: #f0f0f0;
  border-color: #1aad19;
  color: #1aad19;
  transform: scale(0.95);
}

.add-image-btn.dark-mode:active {
  background-color: #404040;
  border-color: #1aad19;
  color: #1aad19;
}

/* 主题色适配 */
.add-image-btn[data-theme="天空蓝"]:active {
  border-color: #1296db;
  color: #1296db;
}

.add-image-btn[data-theme="中国红"]:active {
  border-color: #e54d42;
  color: #e54d42;
}

.add-image-btn[data-theme="默认绿"]:active {
  border-color: #1aad19;
  color: #1aad19;
}

/* 添加图片按钮图标 */
.add-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  font-weight: normal;
  line-height: 1;
}

/* 添加图片按钮文字 */
.add-text {
  font-size: 24rpx;
  color: inherit;
}

.add-text.dark-mode {
  color: inherit;
}

/* 图片上传提示 */
.upload-tips {
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #1aad19;
}

.upload-tips.dark-mode {
  background-color: #2a2a2a;
  border-left-color: #1aad19;
}

/* 主题色适配 */
.upload-tips[data-theme="天空蓝"] {
  border-left-color: #1296db;
}

.upload-tips[data-theme="中国红"] {
  border-left-color: #e54d42;
}

.upload-tips[data-theme="默认绿"] {
  border-left-color: #1aad19;
}

.upload-tips.dark-mode[data-theme="天空蓝"] {
  border-left-color: #1296db;
}

.upload-tips.dark-mode[data-theme="中国红"] {
  border-left-color: #e54d42;
}

.upload-tips.dark-mode[data-theme="默认绿"] {
  border-left-color: #1aad19;
}

/* 提示文字 */
.tip-text {
  display: block;
  font-size: 24rpx;
  line-height: 1.5;
  color: #666666;
  margin-bottom: 4rpx;
}

.tip-text.dark-mode {
  color: #aaaaaa;
}

.tip-text:last-child {
  margin-bottom: 0;
}

/* 响应式适配 */
@media (max-width: 750rpx) {

  .image-item,
  .add-image-btn {
    width: 180rpx;
    height: 180rpx;
  }
}

@media (max-width: 650rpx) {

  .image-item,
  .add-image-btn {
    width: 160rpx;
    height: 160rpx;
  }
}

/* 加载状态 */
.image-loading {
  position: relative;
}

.image-loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 32rpx;
  height: 32rpx;
  margin: -16rpx 0 0 -16rpx;
  border: 2rpx solid #f3f3f3;
  border-top: 2rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

/* 图片数量提示 */
.image-count-tip {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
  font-weight: normal;
}

.image-count-tip.dark-mode {
  color: #aaaaaa;
}

/* ==================== 图片上传样式结束 ==================== */