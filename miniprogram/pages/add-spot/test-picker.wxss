.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.test-item {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.test-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
  display: block;
}

.test-item .picker {
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.test-item .picker-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.test-item .slider {
  margin: 20rpx 0;
}

.test-item .switch {
  margin: 20rpx 0;
}

.test-item .result {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 10rpx;
  border-radius: 4rpx;
  margin-top: 10rpx;
  display: block;
}

.debug-info {
  background-color: #e8f5e8;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #2d5c2d;
}

.debug-info text {
  display: block;
  margin-bottom: 10rpx;
}