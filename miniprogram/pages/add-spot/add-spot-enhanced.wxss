/* add-spot页面增强版样式文件 */
/* 包含了GoogleMapsApi集成后的新增样式 */

/* 基础容器样式 */
.add-spot-container {
  min-height: 100vh;
  padding: 20rpx;
  background: var(--bg-color-primary);
  transition: background 0.3s ease;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  border-radius: 20rpx;
  color: white;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle-text {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单区域 */
.spot-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 表单分组 */
.form-section {
  background: var(--bg-color-secondary);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.form-section:hover {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

/* 分组标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
  position: relative;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.section-title text:not(.title-icon) {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color-primary);
  flex: 1;
}

.title-actions {
  display: flex;
  gap: 15rpx;
}

.mini-btn {
  padding: 10rpx 20rpx !important;
  font-size: 24rpx !important;
  border-radius: 20rpx !important;
  background: var(--error-color) !important;
  color: white !important;
  border: none !important;
}

/* 表单项目 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-primary);
  margin-bottom: 15rpx;
  font-weight: 500;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 20rpx 25rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: var(--bg-color-primary);
  color: var(--text-color-primary);
  transition: all 0.3s ease;
}

.input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.input::placeholder {
  color: var(--text-color-secondary);
}

/* 文本域样式 */
.textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx 25rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: var(--bg-color-primary);
  color: var(--text-color-primary);
  transition: border-color 0.3s ease;
  resize: none;
}

.textarea:focus {
  border-color: var(--primary-color);
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 选择器样式 */
.picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  background: var(--bg-color-primary);
  color: var(--text-color-primary);
  font-size: 28rpx;
  transition: border-color 0.3s ease;
}

.picker-arrow {
  color: var(--text-color-secondary);
  font-size: 24rpx;
}

/* 地址搜索容器 */
.address-search-container {
  position: relative;
}

.address-input {
  width: 100%;
}

/* 搜索状态指示器 */
.search-indicator {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.loading-text {
  font-size: 24rpx;
  color: var(--primary-color);
}

/* 搜索建议列表 */
.suggestions-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--bg-color-primary);
  border: 2rpx solid var(--border-color);
  border-top: none;
  border-radius: 0 0 12rpx 12rpx;
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.suggestion-item {
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background 0.2s ease;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: var(--hover-color);
}

.suggestion-main {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-primary);
  font-weight: 500;
  margin-bottom: 5rpx;
}

.suggestion-detail {
  display: block;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 坐标显示 */
.coordinates-display {
  margin-top: 15rpx;
  padding: 15rpx 20rpx;
  background: var(--hover-color);
  border-radius: 8rpx;
  border-left: 4rpx solid var(--primary-color);
}

.coordinates-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-right: 10rpx;
}

.coordinates-text {
  font-size: 24rpx;
  color: var(--text-color-primary);
  font-family: monospace;
}

/* 地图容器 */
.map-container {
  position: relative;
  margin-top: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.location-map {
  width: 100%;
  height: 400rpx;
}

/* 地图中心标记 */
.map-center-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 5;
  pointer-events: none;
}

.center-icon {
  font-size: 48rpx;
  text-shadow: 0 0 8rpx rgba(0, 0, 0, 0.3);
}

/* 地图提示 */
.map-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  padding: 20rpx;
  z-index: 3;
}

.hint-text {
  color: white;
  font-size: 24rpx;
  text-align: center;
  display: block;
}

/* 附近景点区域 */
.nearby-section {
  margin-top: 30rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  overflow: hidden;
  background: var(--bg-color-primary);
}

.nearby-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  background: var(--hover-color);
  cursor: pointer;
  transition: background 0.2s ease;
}

.nearby-header:active {
  background: var(--border-color);
}

.nearby-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color-primary);
}

.toggle-icon {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.nearby-list {
  border-top: 1rpx solid var(--border-color);
}

.nearby-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background 0.2s ease;
}

.nearby-item:last-child {
  border-bottom: none;
}

.nearby-item:active {
  background: var(--hover-color);
}

.nearby-info {
  flex: 1;
}

.nearby-name {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-primary);
  margin-bottom: 5rpx;
}

.nearby-distance {
  display: block;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.nearby-arrow {
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 图片上传区域 */
.image-upload-container {
  margin-top: 20rpx;
}

.uploaded-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.delete-icon {
  font-size: 28rpx;
  color: var(--error-color);
  font-weight: bold;
}

.add-image-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: 12rpx;
  background: var(--hover-color);
  transition: all 0.3s ease;
}

.add-image-btn:active {
  border-color: var(--primary-color);
  background: rgba(74, 144, 226, 0.1);
}

.add-icon {
  font-size: 60rpx;
  color: var(--text-color-secondary);
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.image-hint {
  margin-top: 15rpx;
  text-align: center;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 15rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 25rpx;
  background: var(--bg-color-primary);
  transition: all 0.3s ease;
}

.tag-item.selected {
  border-color: var(--primary-color);
  background: var(--primary-color);
}

.tag-item.selected .tag-text {
  color: white;
}

.tag-text {
  font-size: 26rpx;
  color: var(--text-color-primary);
}

/* 设施容器 */
.facilities-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 15rpx;
}

.facility-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  background: var(--bg-color-primary);
  transition: all 0.3s ease;
}

.facility-item.selected {
  border-color: var(--primary-color);
  background: rgba(74, 144, 226, 0.1);
}

.facility-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.facility-text {
  font-size: 26rpx;
  color: var(--text-color-primary);
}

/* 提交区域 */
.submit-section {
  margin-top: 40rpx;
  text-align: center;
}

.submit-btn {
  width: 100%;
  padding: 25rpx 0 !important;
  border-radius: 16rpx !important;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%) !important;
  border: none !important;
  font-size: 32rpx !important;
  font-weight: bold !important;
  color: white !important;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.3) !important;
  transition: all 0.3s ease !important;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(74, 144, 226, 0.3) !important;
}

.submit-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.submit-hint {
  margin-top: 20rpx;
}

/* 加载覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: var(--bg-color-primary);
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  text-align: center;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    --bg-color-primary: #1a1a1a;
    --bg-color-secondary: #2d2d2d;
    --text-color-primary: #ffffff;
    --text-color-secondary: #b0b0b0;
    --border-color: #404040;
    --hover-color: #363636;
    --primary-color: #4a90e2;
    --secondary-color: #7b68ee;
    --success-color: #52c41a;
    --warning-color: #faad14;
    --error-color: #ff4d4f;
  }
}

/* 浅色模式适配 */
@media (prefers-color-scheme: light) {
  page {
    --bg-color-primary: #ffffff;
    --bg-color-secondary: #f8f9fa;
    --text-color-primary: #333333;
    --text-color-secondary: #666666;
    --border-color: #e1e5e9;
    --hover-color: #f5f5f5;
    --primary-color: #4a90e2;
    --secondary-color: #7b68ee;
    --success-color: #52c41a;
    --warning-color: #faad14;
    --error-color: #ff4d4f;
  }
}

/* 默认变量（兼容性） */
page {
  --bg-color-primary: #ffffff;
  --bg-color-secondary: #f8f9fa;
  --text-color-primary: #333333;
  --text-color-secondary: #666666;
  --border-color: #e1e5e9;
  --hover-color: #f5f5f5;
  --primary-color: #4a90e2;
  --secondary-color: #7b68ee;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .uploaded-images {
    grid-template-columns: repeat(2, 1fr);
  }

  .facilities-container {
    grid-template-columns: 1fr;
  }
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: var(--bg-color-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--border-color);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-color-secondary);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeIn 0.5s ease-out;
}

.suggestion-item {
  animation: fadeIn 0.3s ease-out;
}

.nearby-item {
  animation: fadeIn 0.3s ease-out;
}