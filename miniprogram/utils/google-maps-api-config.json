{
  "name": "Google Maps API 代理服务器",
  "version": "1.0.0",
  "description": "为微信小程序提供Google Maps API代理服务",
  "authentication": {
    "required": true,
    "password": "需要提供API密码才能访问API端点",
    "current_password": "123456..a",
    "methods": [
      "查询参数: ?password=your_password",
      "请求头: X-API-Password: your_password",
      "Bearer Token: Authorization: Bearer your_password",
      "请求体: {\"password\": \"your_password\"}"
    ]
  },
  "endpoints": [
    "GET /geocode/json - 地理编码",
    "POST /geocode/json - 地理编码（支持请求体）",
    "GET /place/autocomplete/json - 地址自动完成",
    "POST /place/autocomplete/json - 地址自动完成（支持请求体）",
    "GET /place/details/json - 地点详情",
    "POST /place/details/json - 地点详情（支持请求体）",
    "GET /place/nearbysearch/json - 附近搜索",
    "POST /place/nearbysearch/json - 附近搜索（支持请求体）",
    "GET /place/textsearch/json - 文本搜索",
    "POST /place/textsearch/json - 文本搜索（支持请求体）",
    "GET /distancematrix/json - 距离矩阵",
    "POST /distancematrix/json - 距离矩阵（支持请求体）",
    "GET /directions/json - 路线规划",
    "POST /directions/json - 路线规划（支持请求体）",
    "GET /health - 健康检查（无需密码）",
    "GET /api-status - API状态检查（无需密码）"
  ],
  "usage": {
    "base_url": "https://googlemap.edge2.xyz",
    "local_proxy": "http://localhost:3002",
    "example": "https://googlemap.edge2.xyz/geocode/json?address=北京天安门&language=zh-CN&password=123456..a",
    "current_implementation": "直接访问外部代理服务器，已集成密码认证"
  },
  "implementation_notes": {
    "微信小程序集成": "已在 miniprogram/utils/GoogleMapsApi.js 中实现",
    "密码认证": "所有API请求自动添加password参数",
    "请求方式": "通过查询参数传递密码",
    "baseUrl": "https://googlemap.edge2.xyz",
    "密码": "123456..a"
  },
  "supported_apis": {
    "geocoding": {
      "endpoint": "/geocode/json",
      "description": "地理编码 - 地址转坐标",
      "parameters": [
        "address",
        "language",
        "region",
        "password"
      ]
    },
    "reverse_geocoding": {
      "endpoint": "/geocode/json",
      "description": "逆地理编码 - 坐标转地址",
      "parameters": [
        "latlng",
        "language",
        "password"
      ]
    },
    "place_autocomplete": {
      "endpoint": "/place/autocomplete/json",
      "description": "地点自动完成",
      "parameters": [
        "input",
        "language",
        "location",
        "radius",
        "password"
      ]
    },
    "place_details": {
      "endpoint": "/place/details/json",
      "description": "地点详情",
      "parameters": [
        "place_id",
        "language",
        "password"
      ]
    },
    "nearby_search": {
      "endpoint": "/place/nearbysearch/json",
      "description": "附近搜索",
      "parameters": [
        "location",
        "radius",
        "type",
        "keyword",
        "password"
      ]
    },
    "text_search": {
      "endpoint": "/place/textsearch/json",
      "description": "文本搜索",
      "parameters": [
        "query",
        "location",
        "radius",
        "language",
        "password"
      ]
    },
    "distance_matrix": {
      "endpoint": "/distancematrix/json",
      "description": "距离矩阵",
      "parameters": [
        "origins",
        "destinations",
        "mode",
        "language",
        "password"
      ]
    },
    "directions": {
      "endpoint": "/directions/json",
      "description": "路线规划",
      "parameters": [
        "origin",
        "destination",
        "mode",
        "language",
        "password"
      ]
    }
  }
}