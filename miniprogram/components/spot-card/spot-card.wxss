/* components/spot-card/spot-card.wxss */

/* ==================== 卡片基础样式 ==================== */
/* 卡片容器 - 定义景点卡片的基本外观和布局 */
.spot-card {
  display: flex;
  /* 使用弹性布局 - 方便内部元素排列 */
  flex-direction: column;
  /* 子元素垂直排列 - 图片在上，信息在下 */
  position: relative;
  /* 设置为相对定位 - 便于内部元素的绝对定位 */
  margin: 0;
  /* 移除外边距，确保卡片能更紧凑地排列 */
  width: 100%;
  /* 宽度100%，占满容器 */
  border-radius: 12rpx;
  /* 圆角边框 - 提供现代视觉效果 */
  overflow: hidden;
  /* 隐藏溢出内容 - 保持圆角效果完整 */
  background-color: white;
  /* 背景色 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  /* 增强阴影效果，使卡片更加突出 */
  height: auto;
  /* 自动高度 */
  min-height: 320rpx;
  /* 设置最小高度，确保卡片形状 */
}

/* 景点图片 - 定义卡片顶部的景点图片样式 */
.spot-image {
  width: 100%;
  /* 图片宽度占满容器 */
  height: 240rpx;
  /* 适当增加高度，确保图片显示清晰 */
  object-fit: cover;
  /* 图片裁剪以填充容器，保持比例 */
  display: block;
  /* 确保图片正确显示为块级元素 */
}

/* 评分徽章 - 显示在图片右下角的景点评分标签 */
.rating-badge {
  position: absolute;
  /* 绝对定位 */
  top: 200rpx;
  /* 调整为与新的图片高度匹配 */
  right: 16rpx;
  /* 距右侧距离 */
  background-color: rgba(0, 0, 0, 0.6);
  /* 半透明黑色背景 */
  color: white;
  /* 文字颜色 */
  padding: 6rpx 16rpx;
  /* 内边距 */
  border-radius: 20rpx;
  /* 圆角 */
  font-size: 24rpx;
  /* 字体大小 */
  font-weight: bold;
  /* 字体粗细 */
}

/* 景点信息区域 - 定义卡片下半部分信息内容的容器样式 */
.spot-info {
  padding: 16rpx;
  /* 适当调整内边距 */
  background-color: white;
  /* 背景色 */
  display: flex;
  /* 弹性布局 */
  flex-direction: column;
  /* 子元素垂直排列 */
  gap: 10rpx;
  /* 子元素间距 */
  flex: 1;
  /* 占据剩余空间 */
}

/* 景点标题 - 定义景点名称的文字样式 */
.spot-title {
  font-size: 30rpx;
  /* 字体大小，适合两列布局 */
  font-weight: bold;
  /* 字体粗细 */
  color: #333333;
  /* 文字颜色 */
  margin-bottom: 8rpx;
  /* 增加底部外边距 */
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 隐藏溢出部分 */
  text-overflow: ellipsis;
  /* 显示省略号 */
}

/* 评分显示区域 - 定义评分星星和数值的容器样式 */
.spot-rating {
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中对齐 */
  margin-bottom: 10rpx;
  /* 底部外边距 */
}

/* 评分星星图标 - 定义评分旁边的星星样式 */
.rating-star {
  color: #ffcc00;
  /* 星星颜色：黄色 */
  font-size: 32rpx;
  /* 字体大小 */
  margin-right: 5rpx;
  /* 右侧外边距 */
}

/* 评分数值 - 定义评分数字的样式 */
.rating-value {
  color: #ffcc00;
  /* 文字颜色：黄色 */
  font-size: 28rpx;
  /* 字体大小 */
  font-weight: bold;
  /* 字体粗细 */
}

/* 景点位置 - 定义位置信息的容器样式 */
.spot-location {
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中对齐 */
  font-size: 24rpx;
  /* 字体大小 */
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 隐藏溢出部分 */
  text-overflow: ellipsis;
  /* 显示省略号 */
  /* 字体大小，减小以更好适应两列布局 */
  color: #666666;
  /* 文字颜色：灰色 */
  margin-bottom: 5rpx;
  /* 底部外边距 */
  overflow: hidden;
  /* 隐藏溢出内容 */
  text-overflow: ellipsis;
  /* 文本溢出显示省略号 */
  white-space: nowrap;
  /* 不换行 */
}

/* 位置图标 - 定义位置前面的图标样式 */
.location-icon {
  margin-right: 8rpx;
  /* 右侧外边距 */
  font-size: 28rpx;
  /* 字体大小 */
  color: #ff6b6b;
  /* 图标颜色：红色 */
}

/* 景点分类容器 - 定义分类标签的容器样式 */
.spot-category {
  margin: 5rpx 0;
  /* 上下外边距 */
}

/* 分类标签 - 定义分类标签的样式 */
.category-tag {
  display: inline-block;
  /* 行内块元素 */
  background-color: var(--theme-light-bg, rgba(46, 213, 115, 0.15));
  /* 使用主题浅色背景 */
  color: var(--theme-color, #2ed573);
  /* 使用主题色 */
  padding: 4rpx 12rpx;
  /* 内边距 */
  border-radius: 8rpx;
  /* 圆角 */
  font-size: 22rpx;
  /* 字体大小 */
  font-weight: 500;
  /* 字体粗细 */
}

/* 价格信息 - 定义价格文本的样式 */
.spot-price {
  font-size: 28rpx;
  /* 字体大小 */
  color: #ff4d4f;
  /* 文字颜色：红色 */
  font-weight: bold;
  /* 字体粗细 */
  margin-top: 8rpx;
  /* 增加顶部外边距 */
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中 */
}

/* 免费价格 - 定义价格为免费时的文本样式 */
.free-price {
  color: #2ed573;
  /* 文字颜色：绿色 */
  background-color: rgba(46, 213, 115, 0.1);
  /* 浅绿色背景 */
  padding: 2rpx 10rpx;
  /* 内边距 */
  border-radius: 6rpx;
  /* 圆角 */
}

/* ==================== 深色模式样式 ==================== */
/* 深色模式下的卡片容器样式 */
.spot-card.dark-mode {
  background-color: #222222;
  /* 深色背景 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  /* 更暗的阴影 */
}

/* 深色模式下的信息区域样式 */
.spot-info.dark-mode {
  background-color: #222222;
  /* 深色背景 */
}

/* 深色模式下的标题样式 */
.spot-title.dark-mode {
  color: #e0e0e0;
  /* 浅色文字 */
}

/* 深色模式下的位置文本样式 */
.spot-location.dark-mode {
  color: #aaaaaa;
  /* 浅灰色文字 */
}

/* 深色模式下的位置图标样式 */
.location-icon.dark-mode {
  color: #ff9f9f;
  /* 浅红色图标 */
}

/* 深色模式下的分类标签样式 */
.category-tag.dark-mode {
  background-color: rgba(46, 213, 115, 0.2);
  /* 略深的绿色背景 */
  color: #5cf396;
  /* 浅绿色文字 */
}



/* 引入黑暗模式样式 - 用于系统自动切换深色模式支持 */
@import "./spot-card-wxa-auto-dark.wxss";